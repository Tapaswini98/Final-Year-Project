<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WATCO | H&UD</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="css/landing.css">
  <link rel="stylesheet" href="plugins/fontawesome/css/all.min.css">
</head>

<body>
  <script>
    function myFunction() {
      var x = document.getElementById("password");
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password";
      }
    }
  </script>
  <!--Page header-->

  <div class="page-header">
    <div class="row" style="margin: 0px;">
      <div class="head col-md-4 col-12" style="float: left;">
        <img src="images/1.png" alt="WatcoLOGO" class="logo">
        <div class="logo">
          <h4 style="position: relative; top: 10px;">WATCO H&UD</h4>
          <span><i>Save Water, Save Earth</i></span>
        </div>
      </div>
      <div class="head col-md-8 col-12" style="text-align: center;font-size: 25px;right: 10%">
        <b>
          <h2 style="position: relative; top: -5px; left: -20%;">SMART WATER MANAGEMENT</h2>
          <h4 style="position: relative; top: -10px; left: -20%;">Under Drinking From Tap Mission</h4>
        </b>
      </div>
    </div>
  </div>
  <!--End header-->

  <!--Page body-->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8 col-12" style="padding-right: 0;">
        <div class="card">
          <div id="demo" class="carousel slide" data-ride="carousel">
            <!-- The slideshow -->
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="images/2.jpg" width="1100" height="500" alt="Puri">
              </div>
              <div class="carousel-item">
                <img src="images/7.jpg" width="1100" height="500" alt="water">
              </div>
              <div class="carousel-item">
                <img src="images/10.jpg" width="1100" height="500" alt="Unable to load">
              </div>
            </div>

          </div>

        </div>
      </div>
      <div class="col-md-4 col-12">
        <!--Form start-->
        <!-- <div class="row "> -->
        <div class="card" style="padding: 9% 2% 9% 2%;background-color: rgba(6, 126, 247, 0.3);">
          <form action="/landing" id="login-form" role="form" method="POST">
            <div style="color: red; font-weight: bold; padding-left: 30%;"><%= user %></div>
            <div class="form-group">
              <label for="username">Username <span style="color: red;">*</span></label>
              <input type="text" class="form-control" name="username" id="username" required />
            </div>
            <div class="form-group input-md">
              <label for="password">Password <span style="color: red;">*</span></label>
              <input type="password" class="form-control" name="password" id="password" required />
              <span class="eyespan" onclick="myFunction()">&#x1f441;</span>
            </div>
            <div style="color: red; font-weight: bold; padding-left: 30%;"><%= password %></div>
            <!--captcha-->
            <div class="captcha">
              <span style="font-size: 20px;">Captcha</span>
              <div><img src="/captcha" alt="captcha img" style="border: 1px solid;"> </div>
              <br />
              <div>
                <input type="text" id="txtCompare" placeholder="Captcha Code ?" name="captcha" />
                <button id="btnrefresh"><i class="fas fa-redo-alt" aria-hidden="true"></i></button>
              </div>
            </div>
            <span style="color: red; font-weight: bold; padding-left: 30%;"><%= captcha %></span>
            <!--End captcha-->
            <br /><br />
            <div style="text-align: center;">
              <button type="submit" class="btn btn-success">
                <a style="text-decoration: none; color: white; font-size: 20px;">Login</a>
              </button>
              <!-- Trigger/Open The Modal -->
              <span id="myBtn">Forgot Password ?</span>

              <!-- The Modal -->
              <div id="myModal" class="modal">

                <!-- Modal content -->
                <div class="modal-content">
                  <span class="close">&times;</span>
                  <h2>Please Contact Administrator</h2>
                </div>

              </div>
            </div>
          </form>
        </div>
        <!--End form-->
        <!-- </div> -->
      </div>
    </div>
  </div>
  <div class="footer">
    <span>&#169</span> <a href="https://www.urbanodisha.gov.in/" target="_blank"> H&UD </a>2021 | Developed by <a
      href="https://www.nic.in/" target="_blank">NIC</a> | <a href="#"> Privacy Policy </a>
  </div>

  <script>
    // Get the modal
    var modal = document.getElementById("myModal");

    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks the button, open the modal 
    btn.onclick = function () {
      modal.style.display = "block";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
      modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
  </script>
